<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
  android:background="#ffffff">
  				
	<TextView android:id="@+id/text_view_reminder"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#372c24"
		android:layout_marginTop="10dp"
		android:text="@string/reminder"/>
	<Spinner android:id="@+id/spinner_reminder"
	    android:layout_width="fill_parent"
	    android:layout_height="70dp"
	    android:layout_below="@+id/text_view_reminder"
	    android:layout_marginTop="10dp" />
	<TextView android:id="@+id/text_view_schedule"
        android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:layout_below="@+id/spinner_reminder"
  		android:gravity="right"
  		android:textColor="#372c24"
  		android:layout_marginTop="10dp"
  		android:text="@string/schedule"/>
	<CheckBox android:id="@+id/checkbox_sunday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/text_view_schedule"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/sunday"
	    android:textColor="#372c24" />
	<CheckBox android:id="@+id/checkbox_monday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignBaseline="@+id/checkbox_sunday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/monday"
	    android:textColor="#372c24" />
	<CheckBox android:id="@+id/checkbox_tuesday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/checkbox_sunday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/tuesday"
	    android:textColor="#372c24" />
	<CheckBox android:id="@+id/checkbox_wednesday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/checkbox_monday"
	    android:layout_below="@+id/checkbox_monday"
	    android:layout_alignBaseline="@+id/checkbox_tuesday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/wednesday"
	    android:textColor="#372c24" />
	<CheckBox android:id="@+id/checkbox_thursday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/checkbox_tuesday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/thursday"
	    android:textColor="#372c24" />
		<CheckBox android:id="@+id/checkbox_friday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/checkbox_wednesday"
	    android:layout_below="@+id/checkbox_wednesday"
	    android:layout_alignBaseline="@+id/checkbox_thursday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/friday"
	    android:textColor="#372c24" />
	<CheckBox android:id="@+id/checkbox_saturday"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/checkbox_thursday"
	    android:layout_marginTop="10dp"
	    android:button="@null"
	    android:drawableRight="@drawable/checkbox_selector"
	    android:onClick="onCheckboxClicked"
	    android:text="@string/saturday"
	    android:textColor="#372c24" />
	<TextView android:id="@+id/text_view_workout_time"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/checkbox_saturday"
		android:textColor="#372c24"
		android:layout_marginTop="10dp"
		android:text="@string/workout_time"/>
   	<NumberPicker android:id="@+id/number_picker_workout_time"
   	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_workout_time"
        android:layout_alignRight="@+id/text_view_workout_time"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />	
	<Button android:id="@+id/button_create"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:text="@string/next"
	    android:textColor="#372c24" />
</RelativeLayout>